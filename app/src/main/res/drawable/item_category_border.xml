<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền -->
    <solid android:color="#FFFFFF" />

    <!-- Viền -->
    <stroke
        android:width="2dp"
        android:color="#4CAF50" />

    <!-- Bo góc -->
    <corners android:radius="8dp" />

    <!-- Padding bên trong -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
